#include <iostream>
#include <string>
using namespace std;

int main() {
    string screen = "HOME";
    int shards = 0;
    bool running = true;

    while (running) {
        if (screen == "HOME") {
            cout << "\n==== HOME ====" << endl;
            cout << "Community: Smart Spending, Strong Future" << endl;
            cout << "Trang bị kiến thức tài chính thông minh cho thế hệ trẻ" << endl;
            cout << "1. INSTRUCTIONS\n2. EXIT\nChọn: ";
            int choice;
            cin >> choice;
            if (choice == 1) screen = "INSTRUCTIONS";
            else running = false;
        }
        else if (screen == "INSTRUCTIONS") {
            cout << "\n==== INSTRUCTIONS ====" << endl;
            cout << "Phương pháp 6 chiếc lọ: Mô hình phân bổ tài chính giúp quản lý chi tiêu và tiết kiệm." << endl;
            cout << "1. PRACTICE\n2. APPLY\n3. HOME\nChọn: ";
            int choice;
            cin >> choice;
            if (choice == 1) screen = "PRACTICE";
            else if (choice == 2) screen = "APPLY";
            else screen = "HOME";
        }
        else if (screen == "PRACTICE") {
            cout << "\n==== PRACTICE ====" << endl;
            cout << "Ví dụ tình huống: Bạn có 50k để ăn trưa tại căn tin. Bạn sẽ chọn gì?" << endl;
            cout << "1. Hoàn thành tình huống (+5 shards)\n2. HOME\nChọn: ";
            int choice;
            cin >> choice;
            if (choice == 1) {
                shards += 5;
                cout << "Hoàn thành tình huống! +5 shards" << endl;
                cout << "Shards hiện tại: " << shards << endl;
            } else {
                screen = "HOME";
            }
        }
        else if (screen == "APPLY") {
            cout << "\n==== APPLY ====" << endl;
            cout << "Bạn muốn mua một món đồ 200k. Có nên mua không?" << endl;
            cout << "1. Sử dụng 5 shards để AI phân tích\n2. HOME\nChọn: ";
            int choice;
            cin >> choice;
            if (choice == 1) {
                if (shards >= 5) {
                    shards -= 5;
                    cout << "AI gợi ý: Chỉ mua nếu thực sự cần thiết." << endl;
                    cout << "Shards còn lại: " << shards << endl;
                } else {
                    cout << "Không đủ shards! Hoàn thành thêm PRACTICE để kiếm shards." << endl;
                }
            } else {
                screen = "HOME";
            }
        }
    }
    return 0;
}
